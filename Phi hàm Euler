#include<bits/stdc++.h>
using namespace std;

const int M = 1e9 + 7; // modulo không nhất thiết phải là số nguyên tố
int a;

long long binPow(int m) {
    if(m == 0) return 1;

    long long b = binPow(m / 2);
    long long c = ((b % M) * (b % M)) % M;
    if(m % 2) return (c * (a % M)) % M;
    return c;
}

int phi(int m) {
    int ans = m;
    for(int i = 2; i * i <= m; ++i) {
        if(m % i == 0) {
            ans -= ans / i;
            while(m % i == 0) m /= i;
        }
    }
    if(m > 1) ans -= ans / m;
    return ans;
}

int main() {
    cin >> a;
    cout << binPow(phi(M) - 1);
}
