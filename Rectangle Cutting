#include<bits/stdc++.h>
using namespace std;

long long a, b, f[501][501];

long long back(int x, int y) {
    if(f[x][y] != -1) return f[x][y];
    if(x == y) return 0;

    long long ans = LLONG_MAX;
    for(int i = 1; i < x; ++i) {
        ans = min(ans, back(i, y) + back(x - i, y) + 1);
    }
    for(int i = 1; i < y; ++i) {
        ans = min(ans, back(x, i) + back(x, y - i) + 1);
    }

    return f[x][y] = ans;
}

int main() {
    ios_base::sync_with_stdio(false); cin.tie(NULL);
    #ifndef ONLINE_JUDGE
    freopen("input.txt", "r", stdin);
    freopen("output.txt", "w", stdout);
    #endif
    
    cin >> a >> b;
    for(int i = 0; i <= a; ++i)
        for(int j = 0; j <= b; ++j) f[i][j] = -1;

    cout << back(a, b);
}
