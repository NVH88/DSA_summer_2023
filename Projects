#include<bits/stdc++.h>
using namespace std;

struct job{
    int b, e, m;
    job(int x, int y, int z) {
        b = x; e = y; m = z;
    }
};

bool cmp(job x, job y) {
    return x.e < y.e;
}

int n;
vector<job> j;

void init() {
    cin >> n;
    for(int i = 0; i < n; ++i) {
        int x, y, z; cin >> x >> y >> z;
        j.push_back(job(x, y, z));
    }
    sort(j.begin(), j.end(), cmp);
}

int bs(int id) {
    int l = 0, r = id - 1, ans = -1;
    while(l <= r) {
        int m = (l + r) / 2;
        if(j[m].e < j[id].b) ans = m, l = m + 1;
        else r = m - 1;
    }
    return ans;
}

void solve() {
    vector<long long> dp(n, 0);
    dp[0] = j[0].m;
    for(int i = 1; i < n; ++i) {
        int x = bs(i);
        if(x == -1) dp[i] = max(dp[i - 1], 1ll * j[i].m);
        else dp[i] = max(dp[i - 1], dp[x] + j[i].m);
    }
    cout << dp[n - 1];
}

int main() {
    ios_base::sync_with_stdio(false); cin.tie(NULL);
    #ifndef ONLINE_JUDGE
    freopen("input.txt", "r", stdin);
    freopen("output.txt", "w", stdout);
    #endif
    
    init();
    solve();
}
