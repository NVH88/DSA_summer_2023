#include<bits/stdc++.h>
using namespace std;
const int N = 200005;

int n, X[N];
vector<int> child[N];

void init() {
	cin >> n;
	for(int i = 2; i <= n; ++i) {
		int x; cin >> x;
		child[x].push_back(i);
	}
}

int DFS(int u) {
	int cnt = 0;
	for(int v : child[u]) {
		cnt += DFS(v) + 1;
	}
	return X[u] = cnt;
}

int main() {
	ios_base::sync_with_stdio(0); cin.tie(0); cout.tie(0);
	init();
	DFS(1);
	for(int i = 1; i <= n; ++i)
		cout << X[i] << " ";
}
