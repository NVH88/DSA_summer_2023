#include<bits/stdc++.h>
using namespace std;
const int M = 1e9 + 7;

int main() {
    ios_base::sync_with_stdio(false); cin.tie(NULL);
    #ifndef ONLINE_JUDGE
    freopen("input.txt", "r", stdin);
    freopen("output.txt", "w", stdout);
    #endif
   
    int n; cin >> n;
    int f[n + 1] = {0}; f[0] = 1;
    for(int i = 1; i <= n; ++i) {
        for(int j = 1; j <= 6; ++j) {
            if(i >= j) {
                f[i] += f[i - j]; f[i] %= M;
            }
        }
    }
    cout << f[n];
}
