#include<bits/stdc++.h>
using namespace std;
const int N = 200001;
#define bit(n, k) ((n >> k) & 1)

int n, q, p[N][20], h[N];

void init() {
    cin >> n >> q;
    for (int i = 2; i <= n; ++i) {
        int j; cin >> j;
        p[i][0] = j;
        h[i] = h[j] + 1;
    }
    p[1][0] = 0;
}

void qhd() {
    for (int i = 1; i < 20; ++i) {
        for (int u = 2; u <= n; ++u) {
            p[u][i] = p[p[u][i - 1]][i - 1];
        }
    }
}

int LCA(int u, int v) {
    if (h[v] > h[u]) swap(u, v);
    int d = h[u] - h[v];
    for (int i = 0; i < 20; ++i) if (bit(d, i)) {
        u = p[u][i];
    }
    if (u == v) return u;

    for (int i = 19; i >= 0; --i) if (p[u][i] != p[v][i]) {
        u = p[u][i]; v = p[v][i];
    }
    return p[u][0];
}

int main() {
    ios_base::sync_with_stdio(false); cin.tie(NULL);
    #ifndef ONLINE_JUDGE
    freopen("input.txt", "r", stdin);
    freopen("output.txt", "w", stdout);
    #endif
   
    init();
    qhd();
    while (q--) {
        int u, v; cin >> u >> v;
        cout << LCA(u, v) << endl;
    }
}
